{
    "include": ["src/**/*"],
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": ".",
        "allowJs": true,
        "noImplicitAny": false,
        "typeRoots": ["node_modules/@types", "src/types"],
        "lib": ["es6", "dom"],
        "noImplicitThis": true,
        "strictNullChecks": false,
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
